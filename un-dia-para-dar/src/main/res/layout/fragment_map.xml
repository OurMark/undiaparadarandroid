<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">


    <FrameLayout
        android:id="@+id/map"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <LinearLayout
        android:id="@+id/campaign_layout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/m6"
        android:layout_alignParentBottom="true"
        android:background="@color/white"
        android:orientation="vertical">


        <TextView
            android:id="@+id/title"
            android:layout_width="@dimen/m36"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:paddingTop="@dimen/m1.5"
            android:text="Sumate a nuestra campaÃ±a NOSelfie"
            android:textColor="@color/dark_red"
            android:textSize="16sp"/>

        <ImageView
            android:layout_width="@dimen/m32"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:src="@drawable/banda_colores"/>

    </LinearLayout>

    <TextView
        android:layout_width="@dimen/m36"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/m5"
        android:layout_centerHorizontal="true"
        android:textColor="@color/white"
        android:layout_above="@id/campaign_layout"
        android:gravity="center"
        android:textSize="16sp"
        android:text="Fundacion Hemocentro Mar del Plata"
        android:background="@drawable/rounder_border"/>


</RelativeLayout>
