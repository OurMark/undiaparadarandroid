<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_general"
    android:layout_marginRight="@dimen/m2"
    android:layout_marginLeft="@dimen/m2"
    android:orientation="vertical">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_gravity="center_horizontal"
        android:textAllCaps="true"
        android:textColor="@color/dark_red"
        android:textSize="32sp"
        android:textStyle="bold"
        android:layout_marginTop="@dimen/m3"
        android:text="@string/participate"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/m3"
        android:layout_marginRight="@dimen/m2"
        android:layout_marginLeft="@dimen/m2"
        android:src="@drawable/red_line"/>
    
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:singleLine="false"
        android:text="@string/want_pledge"
        android:gravity="center"
        android:textSize="20sp"
        android:layout_marginTop="@dimen/m3"
        android:layout_marginRight="@dimen/m2"
        android:layout_marginLeft="@dimen/m2"
        android:textStyle="bold"
        android:textColor="@color/black"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:singleLine="false"
        android:text="@string/pledge_description"
        android:gravity="center"
        android:textSize="20sp"
        android:layout_marginTop="@dimen/m3"
        android:layout_marginRight="@dimen/m2"
        android:layout_marginLeft="@dimen/m2"
        android:textColor="@color/black"/>

</LinearLayout>
