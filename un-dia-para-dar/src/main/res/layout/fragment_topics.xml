<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_general"
    android:orientation="vertical">

    <GridView
        android:id="@+id/topics_grid"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/m2"
        android:layout_marginLeft="@dimen/m2"
        android:layout_marginRight="@dimen/m2"
        android:choiceMode="multipleChoice"
        android:gravity="center"
        android:horizontalSpacing="@dimen/m4"
        android:numColumns="3"
        android:stretchMode="columnWidth"
        android:verticalSpacing="@dimen/m4" />
</LinearLayout>