<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light">
        <item name="android:actionBarStyle">@style/MyActionBar</item>
    </style>

    <!-- ActionBar styles -->
    <style name="MyActionBar"
        parent="@android:style/Widget.Holo.Light.ActionBar.Solid.Inverse">
        <item name="android:background">@drawable/actionbar_background</item>
        <item name="android:displayOptions">showHome|useLogo|showTitle</item>
    </style>


    <style name="hashtag_un_dia_para_dar">
        <item name="android:textColor">@color/dark_red</item>
        <item name="android:textSize">30sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:text">@string/hashtag_un_dia_para_dar</item>
    </style>
</resources>
